modules = ["dotnet"]

[nix]
channel = "stable-24_05"
packages = ["dotnet-sdk_8", "vim"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PokerGame"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "poker_curses"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "clean_poker_test"

[[workflows.workflow]]
name = "PokerGame"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./poker-services.sh start-client --port-offset=200 --curses"

[[workflows.workflow]]
name = "poker_curses"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./poker-services.sh curses --port-offset=200"

