modules = ["dotnet"]

[nix]
channel = "stable-24_05"
packages = ["dotnet-sdk_8", "vim"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PokerGame"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "poker_curses"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "clean_poker_test"

[[workflows.workflow]]
name = "PokerGame"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dotnet run --project PokerGame.Console/PokerGame.Console.csproj -- --curses"

[[workflows.workflow]]
name = "poker_curses"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./launch-services.sh curses"

[[workflows.workflow]]
name = "clean_poker_test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dotnet run --project PokerGame.Console/PokerGame.Console.csproj -- --microservices --port-offset 5000 --verbose"

[deployment]
run = ["sh", "-c", "dotnet run --project PokerGame.Console/PokerGame.Console.csproj -- --curses"]

[[ports]]
localPort = 5570
externalPort = 80

[[ports]]
localPort = 5571
externalPort = 3000

[[ports]]
localPort = 5572
externalPort = 3001
