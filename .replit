modules = ["dotnet"]

[nix]
channel = "stable-24_05"
packages = ["dotnet-sdk_8", "vim", "python3", "fontconfig", "libglvnd"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "core-build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "poker-game-test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "rebuild-foundation"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "rebuild-abstractions"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "build-avalonia"

[[workflows.workflow]]
name = "core-build"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && dotnet build MSA.Foundation/MSA.Foundation.csproj -c Debug"

[[workflows.workflow]]
name = "poker-game-test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && ./poker-services.sh start --port-offset 0 --verbose --curses"

[[workflows.workflow]]
name = "rebuild-foundation"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && dotnet build MSA.Foundation/MSA.Foundation.csproj -c Release"

[[workflows.workflow]]
name = "rebuild-abstractions"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && dotnet build PokerGame.Abstractions/PokerGame.Abstractions.csproj -c Release"

[[workflows.workflow]]
name = "build-avalonia"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && dotnet build PokerGame.Avalonia/PokerGame.Avalonia.csproj"

[deployment]
run = ["sh", "-c", "cd /home/runner/workspace && ./poker-services.sh start-client --port-offset 200 --curses"]

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5570
externalPort = 80

[[ports]]
localPort = 5571
externalPort = 3000

[[ports]]
localPort = 5572
externalPort = 3001
