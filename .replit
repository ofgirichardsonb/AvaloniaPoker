modules = ["dotnet"]

[nix]
channel = "stable-24_05"
packages = ["dotnet-sdk_8"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "PokerGame"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "poker_console_workflow"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "poker_microservice_workflow"

[[workflows.workflow]]
name = "PokerGame"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dotnet run --project PokerGame.Console/PokerGame.Console.csproj"
waitForPort = 5000

[[workflows.workflow]]
name = "poker_console_workflow"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dotnet run --project PokerGame.Console/PokerGame.Console.csproj"

[[workflows.workflow]]
name = "poker_microservice_workflow"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo 3 | dotnet run --project PokerGame.Console/PokerGame.Console.csproj -- --microservices"

[deployment]
run = ["sh", "-c", "dotnet run --project PokerGame.Console/PokerGame.Console.csproj"]
