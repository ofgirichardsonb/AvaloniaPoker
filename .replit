modules = ["dotnet"]

[nix]
channel = "stable-24_05"
packages = ["dotnet-sdk_8", "vim"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "rebuild_test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "poker-game"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "poker-game-5000"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "poker-game-updated"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "message-flow-test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "server-test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "poker-test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "rebuild"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "core-build"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "poker-game-test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "services-test"

[[workflows.workflow]]
name = "rebuild_test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && ./rebuild.sh"

[[workflows.workflow]]
name = "poker-game"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && ./rebuild.sh && ./poker-services.sh start --port-offset 0 --verbose --curses"
waitForPort = 5000

[[workflows.workflow]]
name = "poker-game-5000"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && ./poker-services.sh start --port-offset 0 --verbose --curses"
waitForPort = 5000

[[workflows.workflow]]
name = "poker-game-updated"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && ./poker-services.sh start --port-offset 0 --verbose --curses"

[[workflows.workflow]]
name = "message-flow-test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && ./run_starthand_test.sh"

[[workflows.workflow]]
name = "server-test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && ./rebuild.sh && dotnet run --project PokerGame.Launcher/PokerGame.Launcher.csproj -- start-console --port-offset 0 --verbose"

[[workflows.workflow]]
name = "poker-test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && ./poker-services.sh start-client --port-offset 0 --verbose"
waitForPort = 5000

[[workflows.workflow]]
name = "rebuild"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && ./rebuild.sh"

[[workflows.workflow]]
name = "core-build"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && dotnet build PokerGame.Core/PokerGame.Core.csproj"

[[workflows.workflow]]
name = "poker-game-test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && ./poker-services.sh start --port-offset 0 --verbose --curses"
waitForPort = 5000

[[workflows.workflow]]
name = "services-test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && ./poker-services.sh start-services --port-offset 0 --verbose"

[deployment]
run = ["sh", "-c", "cd /home/runner/workspace && ./poker-services.sh start-client --port-offset 200 --curses"]

[[ports]]
localPort = 5570
externalPort = 80

[[ports]]
localPort = 5571
externalPort = 3000

[[ports]]
localPort = 5572
externalPort = 3001
