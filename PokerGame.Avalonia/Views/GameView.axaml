<UserControl xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:viewModels="using:PokerGame.Avalonia.ViewModels"
            mc:Ignorable="d"
            x:Class="PokerGame.Avalonia.Views.GameView">
            
    <Design.DataContext>
        <viewModels:GameViewModel />
    </Design.DataContext>
    
    <!-- Main container with poker table background -->
    <Grid RowDefinitions="Auto,*,Auto" Background="#0F573F">
        <!-- Game Info Header -->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="10">
            <TextBlock Text="{Binding GameStatus}" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="White" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="Pot: " FontWeight="Bold" VerticalAlignment="Center" Foreground="Gold" />
                <TextBlock Text="{Binding Pot}" VerticalAlignment="Center" Margin="5,0,15,0" Foreground="White" />
                <TextBlock Text="Current Bet: " FontWeight="Bold" VerticalAlignment="Center" Foreground="Gold" />
                <TextBlock Text="{Binding CurrentBet}" VerticalAlignment="Center" Margin="5,0,0,0" Foreground="White" />
            </StackPanel>
        </StackPanel>
    
        <!-- Main Game Area -->
        <Grid Grid.Row="1" RowDefinitions="*,Auto,*">
            <!-- Players Area - Fixed positions with Grid to prevent duplicates -->
            <Grid Grid.Row="0" Margin="10" RowDefinitions="*,*" ColumnDefinitions="*,*">
                <!-- Player 1 (You) - top left -->
                <Border Grid.Row="0" Grid.Column="0" 
                        BorderBrush="{Binding Players[0].IsCurrent, Converter={StaticResource BoolToColorConverter}, ConverterParameter=Gold:Gray}" 
                        BorderThickness="2" CornerRadius="5" Margin="5" Padding="10" 
                        Background="#0A422F" 
                        IsVisible="{Binding Players.Count, Converter={StaticResource IntGreaterThanConverter}, ConverterParameter=0}">
                    <Grid RowDefinitions="Auto,Auto" DataContext="{Binding Players[0]}">
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" Foreground="White" />
                            <TextBlock Text=" (" VerticalAlignment="Center" Foreground="White" />
                            <TextBlock Text="{Binding Status}" VerticalAlignment="Center" Foreground="LightGreen" />
                            <TextBlock Text=")" VerticalAlignment="Center" Foreground="White" />
                            <TextBlock Text=" - " VerticalAlignment="Center" Foreground="White" />
                            <TextBlock Text="{Binding Chips}" VerticalAlignment="Center" Foreground="Gold" />
                            <TextBlock Text=" chips" VerticalAlignment="Center" Foreground="White" />
                            <TextBlock Text=" (Bet: " VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White" />
                            <TextBlock Text="{Binding CurrentBet}" VerticalAlignment="Center" Foreground="Gold" />
                            <TextBlock Text=")" VerticalAlignment="Center" Foreground="White" />
                        </StackPanel>
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding HoleCards}" Margin="0,10,0,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Classes="card" Classes.card-red="{Binding IsRed}" Classes.card-black="{Binding !IsRed}">
                                        <TextBlock Text="{Binding Display}" Classes="card" />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
                
                <!-- AI Player - top right -->
                <Border Grid.Row="0" Grid.Column="1" 
                        BorderBrush="{Binding Players[1].IsCurrent, Converter={StaticResource BoolToColorConverter}, ConverterParameter=Gold:Gray}" 
                        BorderThickness="2" CornerRadius="5" Margin="5" Padding="10" 
                        Background="#0A422F" 
                        IsVisible="{Binding Players.Count, Converter={StaticResource IntGreaterThanConverter}, ConverterParameter=1}">
                    <Grid RowDefinitions="Auto,Auto" DataContext="{Binding Players[1]}">
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" Foreground="White" />
                            <TextBlock Text=" (" VerticalAlignment="Center" Foreground="White" />
                            <TextBlock Text="{Binding Status}" VerticalAlignment="Center" Foreground="LightGreen" />
                            <TextBlock Text=")" VerticalAlignment="Center" Foreground="White" />
                            <TextBlock Text=" - " VerticalAlignment="Center" Foreground="White" />
                            <TextBlock Text="{Binding Chips}" VerticalAlignment="Center" Foreground="Gold" />
                            <TextBlock Text=" chips" VerticalAlignment="Center" Foreground="White" />
                            <TextBlock Text=" (Bet: " VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White" />
                            <TextBlock Text="{Binding CurrentBet}" VerticalAlignment="Center" Foreground="Gold" />
                            <TextBlock Text=")" VerticalAlignment="Center" Foreground="White" />
                        </StackPanel>
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding HoleCards}" Margin="0,10,0,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Classes="card" Classes.card-red="{Binding IsRed}" Classes.card-black="{Binding !IsRed}">
                                        <TextBlock Text="{Binding Display}" Classes="card" />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
                
                <!-- Player 3 - bottom left (reserved for future) -->
                <Border Grid.Row="1" Grid.Column="0" 
                        BorderBrush="{Binding Players[2].IsCurrent, Converter={StaticResource BoolToColorConverter}, ConverterParameter=Gold:Gray}" 
                        BorderThickness="2" CornerRadius="5" Margin="5" Padding="10" 
                        Background="#0A422F" 
                        IsVisible="{Binding Players.Count, Converter={StaticResource IntGreaterThanConverter}, ConverterParameter=2}">
                    <Grid RowDefinitions="Auto,Auto" DataContext="{Binding Players[2]}">
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" Foreground="White" />
                            <TextBlock Text=" (" VerticalAlignment="Center" Foreground="White" />
                            <TextBlock Text="{Binding Status}" VerticalAlignment="Center" Foreground="LightGreen" />
                            <TextBlock Text=")" VerticalAlignment="Center" Foreground="White" />
                            <TextBlock Text=" - " VerticalAlignment="Center" Foreground="White" />
                            <TextBlock Text="{Binding Chips}" VerticalAlignment="Center" Foreground="Gold" />
                            <TextBlock Text=" chips" VerticalAlignment="Center" Foreground="White" />
                            <TextBlock Text=" (Bet: " VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White" />
                            <TextBlock Text="{Binding CurrentBet}" VerticalAlignment="Center" Foreground="Gold" />
                            <TextBlock Text=")" VerticalAlignment="Center" Foreground="White" />
                        </StackPanel>
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding HoleCards}" Margin="0,10,0,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Classes="card" Classes.card-red="{Binding IsRed}" Classes.card-black="{Binding !IsRed}">
                                        <TextBlock Text="{Binding Display}" Classes="card" />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
                
                <!-- Player 4 - bottom right (reserved for future) -->
                <Border Grid.Row="1" Grid.Column="1" 
                        BorderBrush="{Binding Players[3].IsCurrent, Converter={StaticResource BoolToColorConverter}, ConverterParameter=Gold:Gray}" 
                        BorderThickness="2" CornerRadius="5" Margin="5" Padding="10" 
                        Background="#0A422F" 
                        IsVisible="{Binding Players.Count, Converter={StaticResource IntGreaterThanConverter}, ConverterParameter=3}">
                    <Grid RowDefinitions="Auto,Auto" DataContext="{Binding Players[3]}">
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" Foreground="White" />
                            <TextBlock Text=" (" VerticalAlignment="Center" Foreground="White" />
                            <TextBlock Text="{Binding Status}" VerticalAlignment="Center" Foreground="LightGreen" />
                            <TextBlock Text=")" VerticalAlignment="Center" Foreground="White" />
                            <TextBlock Text=" - " VerticalAlignment="Center" Foreground="White" />
                            <TextBlock Text="{Binding Chips}" VerticalAlignment="Center" Foreground="Gold" />
                            <TextBlock Text=" chips" VerticalAlignment="Center" Foreground="White" />
                            <TextBlock Text=" (Bet: " VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White" />
                            <TextBlock Text="{Binding CurrentBet}" VerticalAlignment="Center" Foreground="Gold" />
                            <TextBlock Text=")" VerticalAlignment="Center" Foreground="White" />
                        </StackPanel>
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding HoleCards}" Margin="0,10,0,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Classes="card" Classes.card-red="{Binding IsRed}" Classes.card-black="{Binding !IsRed}">
                                        <TextBlock Text="{Binding Display}" Classes="card" />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Community Cards -->
            <Border Grid.Row="1" Background="#0C4A35" CornerRadius="10" Margin="20" Padding="10">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="Community Cards" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="White" />
                    <ItemsControl ItemsSource="{Binding CommunityCards}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Classes="card" Classes.card-red="{Binding IsRed}" Classes.card-black="{Binding !IsRed}" Margin="3">
                                    <TextBlock Text="{Binding Display}" Classes="card" />
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
            
            <!-- Log Messages -->
            <Border Grid.Row="2" BorderBrush="Gold" BorderThickness="1" CornerRadius="5" Margin="10" Padding="10" Background="#0A422F">
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                    <TextBlock Text="{Binding LogMessages}" TextWrapping="Wrap" Foreground="White" />
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- Controls -->
        <Grid Grid.Row="2" ColumnDefinitions="*,Auto" Background="#0A422F">
            <!-- Player Actions -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Check" Command="{Binding CheckCommand}" IsEnabled="{Binding CanCheck}" Classes="action" />
                <Button Content="Call" Command="{Binding CallCommand}" IsEnabled="{Binding CanCall}" Classes="action" />
                <Button Content="Fold" Command="{Binding FoldCommand}" IsEnabled="{Binding CanFold}" Classes="action" />
                <StackPanel Orientation="Horizontal" Margin="5">
                    <NumericUpDown Value="{Binding RaiseAmount}" Minimum="{Binding MinRaiseAmount}" IsEnabled="{Binding CanRaise}" Width="100" />
                    <Button Content="Raise" Command="{Binding RaiseCommand}" IsEnabled="{Binding CanRaise}" Classes="action" />
                </StackPanel>
            </StackPanel>
            
            <!-- Game Controls -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button Content="Add Player" Command="{Binding AddPlayerCommand}" IsEnabled="{Binding CanStartHand}" Classes="action" />
                <Button Content="Add AI Player" Command="{Binding AddAIPlayerCommand}" IsEnabled="{Binding CanStartHand}" Classes="action" />
                <Button Content="Start Hand" Command="{Binding StartHandCommand}" IsEnabled="{Binding CanStartHand}" Classes="action" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>